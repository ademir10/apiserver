<%= form_for @form_payment, :html => { :class => "form-horizontal form_payment" } do |f| %>

  <% if @form_payment.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@form_payment.errors.count, "error") %> prohibited this form_payment from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @form_payment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label 'name', 'Tipo de pagamento', :class => 'control-label col-lg-2' %>
    <div class="col-lg-2">
      <%= f.text_field :type_payment, :class => 'form-control' %>
    </div>
    <%=f.error_span(:type_payment) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit 'Salvar', :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                form_payments_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
