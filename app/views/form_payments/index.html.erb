<%- model_class = FormPayment -%>
<div class="page-header">
  <h1>Formas de pagamento <%= image_tag('form-payment') %></h1>

  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_form_payment_path,
              :class => 'btn btn-primary' %>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Tipo de pagamento</th>
      <th>Criado em</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @form_payments.each do |form_payment| %>
      <tr>
        <td><%= link_to form_payment.type_payment, form_payment_path(form_payment) %></td>
        <td><%=l form_payment.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      form_payment_path(form_payment), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_form_payment_path(form_payment), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      form_payment_path(form_payment),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
