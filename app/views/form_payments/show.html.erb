<%- model_class = FormPayment -%>
<div class="page-header">
  <h1>Forma de pagamento</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Tipo de pagamento:</strong></dt>
  <dd><%= @form_payment.type_payment %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              form_payments_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_form_payment_path(@form_payment), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              form_payment_path(@form_payment),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
