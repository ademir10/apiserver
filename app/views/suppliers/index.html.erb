<%- model_class = Supplier -%>
<div class="page-header">
  <h1>Cadastro de Fornecedores <%= image_tag('supplier.png')%></h1>
  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_supplier_path,
              :class => 'btn btn-primary' %>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Fone</th>
      <th>Celular</th>
      <th>CNPJ</th>
      <th>Email</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @suppliers.each do |supplier| %>
      <tr>
        <td><%= link_to supplier.name, supplier_path(supplier) %></td>
        <td><%= supplier.phone %></td>
        <td><%= supplier.cellphone %></td>
        <td><%= supplier.cnpj %></td>
        <td><%= supplier.email %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      supplier_path(supplier), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_supplier_path(supplier), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      supplier_path(supplier),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
