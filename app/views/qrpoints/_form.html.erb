<%= form_for @qrpoint, :html => { :class => "form-horizontal qrpoint" } do |f| %>

  <% if @qrpoint.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@qrpoint.errors.count, "error") %> prohibited this qrpoint from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @qrpoint.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label 'Descrição', :class => 'control-label col-lg-2' %>
    <div class="col-lg-3">
      <%= f.text_field :description, :class => 'form-control' %>
    </div>
    <%=f.error_span(:description) %>
  </div>
  <div class="form-group">
    <%= f.label 'QRcode impresso', :class => 'control-label col-lg-2' %>
    <div class="col-lg-2">
      <%= f.text_field :qrcode, :class => 'form-control' %>
    </div>
    <%=f.error_span(:qrcode) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit 'Salvar', :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                qrpoints_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
