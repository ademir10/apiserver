<%- model_class = Qrpoint -%>
<div class="page-header">
  <h1>Cadastro de QRPoints <%= image_tag('qrcode.png') %></h1>

  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_qrpoint_path,
              :class => 'btn btn-primary' %>

</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name('Descrição') %></th>
      <th><%= model_class.human_attribute_name('QRcode impresso') %></th>
      <th><%= model_class.human_attribute_name('criado em') %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @qrpoints.each do |qrpoint| %>
      <tr>
        <td><%= link_to qrpoint.description, qrpoint_path(qrpoint) %></td>
        <td><%= qrpoint.qrcode %></td>
        <td><%=l qrpoint.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      qrpoint_path(qrpoint), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_qrpoint_path(qrpoint), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      qrpoint_path(qrpoint),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
