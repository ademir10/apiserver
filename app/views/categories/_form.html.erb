<%= form_for @category, :html => { :class => "form-horizontal category" } do |f| %>

  <% if @category.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @category.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label 'nome', :class => 'control-label col-lg-2' %>
    <div class="col-lg-2">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>

  <div class="form-group">
    <%= f.label 'breve descrição', :class => 'control-label col-lg-2' %>
    <div class="col-lg-2">
      <%= f.text_field :description, :class => 'form-control', :maxlength => 21 %>
    </div>
    <%=f.error_span(:name) %>
  </div>

  <div class="form-group">
    <%= f.label 'Imagem', :class => 'control-label col-lg-2' %>
    <div class="col-lg-4">
    <%= f.file_field :image, :class => 'form-control' %>
  </div>
    <% if f.object.image? %>
        <%= f.check_box :remove_image  %>
        <%= f.label 'Remover imagem' %>
    </div>
      <%=f.error_span(:remove_image) %>
    <% end %>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit 'Salvar', :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                categories_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
