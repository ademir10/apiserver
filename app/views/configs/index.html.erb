<%- model_class = Config -%>
<div class="page-header">
  <h1>Configurações gerais <%= image_tag('config.png') %></h1>

<% if @configs.blank? %>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_config_path,
            :class => 'btn btn-primary' %>
<% end %>

</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:razao) %></th>
      <th><%= model_class.human_attribute_name(:nome_fantasia) %></th>
      <th><%= model_class.human_attribute_name(:cnpj) %></th>
      <th><%= model_class.human_attribute_name(:telefone) %></th>
      <th><%= model_class.human_attribute_name(:check_date) %></th>
      <th><%= model_class.human_attribute_name(:expiration_date) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @configs.each do |config| %>
      <tr>
        <td><%= link_to config.razao, config_path(config) %></td>
        <td><%= config.nome_fantasia %></td>
        <td><%= config.cnpj %></td>
        <td><%= config.telefone %></td>
        <td><%= config.check_date %></td>
        <td><%= config.expiration_date %></td>

        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_config_path(config), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      config_path(config),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
